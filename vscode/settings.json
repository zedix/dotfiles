{
    /*
    |--------------------------------------------------------------------------
    | Spacing
    |--------------------------------------------------------------------------
    */
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.trimAutoWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.eol": "\n",

    /*
    |--------------------------------------------------------------------------
    | Editor & Workbench
    |--------------------------------------------------------------------------
    */

    "editor.cursorSmoothCaretAnimation": true,
    "editor.fontFamily": "Operator Mono",
    "editor.fontSize": 15,
    "editor.glyphMargin": true,
    "editor.folding": false,
    "editor.minimap.enabled": false,
    "explorer.openEditors.visible": 0,
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": false,
    "files.associations": {
        "Vagrantfile": "ruby",
        "all": "yaml",
        "development": "yaml",
        "production": "yaml",
        ".eslintrc": "jsonc",
        ".eslintrc.json": "jsonc",
        ".env": "ini",
        ".env.*": "ini",
    },

    // Rainglow “Heroku” (Taylor Otwell)
    // Ayu Mirage, Atom One Dark, One Dark Pro, Oceanic Next, Sapphire
    "workbench.colorTheme": "Heroku (rainglow)",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": false,

    /*
    |--------------------------------------------------------------------------
    | Extension: Prettier
    |--------------------------------------------------------------------------
    */

    // https://github.com/vuejs/vetur/issues/1195#issuecomment-481941708
    "prettier.disableLanguages": ["vue"],
    "prettier.requireConfig": true,

    // Enable formatOnSave per-language
    "editor.formatOnSave": false,
    "[css]": {
        "editor.formatOnSave": true
    },
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[json]": {
        "editor.formatOnSave": true
    },
    "[vue]": {
        // Use eslint.autoFixOnSave instead to avoid conflicts (e.g. with `vue/html-indent`)
        "editor.formatOnSave": false
    },

    // https://code.visualstudio.com/docs/nodejs/vuejs-tutorial
    // "vetur.format.defaultFormatter.html": "prettier",
    "vetur.format.defaultFormatter.js": "prettier-eslint",

    /*
    |--------------------------------------------------------------------------
    | Extension: ESLint
    |--------------------------------------------------------------------------
    */

    "eslint.enable": true,
    // This settings was required to make prettier work on vue html
    "eslint.autoFixOnSave": true,
    "eslint.alwaysShowStatus": true,
    "eslint.options": {
        "extensions": [
            ".html",
            ".js",
            ".json",
            ".jsx",
            ".vue",
        ]
    },
    "eslint.nodePath": "${workspaceFolderBasename}/node_modules/",
    "eslint.validate": [
        {
            "language": "html",
            "autoFix": true
        },
        {
            "language": "vue",
            "autoFix": true
        },
        {
            "language": "javascript",
            "autoFix": true
        },
        {
            "language": "javascriptreact",
            "autoFix": true
        }
    ],

    /*
    |--------------------------------------------------------------------------
    | Extension: Stylelint
    |--------------------------------------------------------------------------
    */

    "css.validate": false,
    "stylelint.enable": true,

    /*
    |--------------------------------------------------------------------------
    | Extension: Flow
    |--------------------------------------------------------------------------
    */

    "javascript.validate.enable": false,
    "javascript.updateImportsOnFileMove.enabled": "always",

    // "flow.enabled": true,
    // "flow.useNPMPackagedFlow": true,
    // "flow.pathToFlow": "${workspaceFolderBasename}/node_modules/.bin/flow",
}
