{
    /*
    |--------------------------------------------------------------------------
    | Spacing
    |--------------------------------------------------------------------------
    */
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.trimAutoWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.eol": "\n",
    /*
    |--------------------------------------------------------------------------
    | Editor & Workbench
    |--------------------------------------------------------------------------
    */
    "breadcrumbs.enabled": true,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 15,
    "editor.glyphMargin": true,
    "editor.folding": false,
    "editor.minimap.enabled": false,
    "explorer.openEditors.visible": 0,
    "editor.renderControlCharacters": false,
    "editor.scrollBeyondLastLine": false,
    "files.associations": {
        "Vagrantfile": "ruby",
        "all": "yaml",
        "development": "yaml",
        "production": "yaml",
        ".eslintrc": "jsonc",
        ".eslintrc.json": "jsonc",
        ".env": "ini",
        ".env.*": "ini"
    },
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": false,
    /*
    |--------------------------------------------------------------------------
    | Extension: Prettier
    |--------------------------------------------------------------------------
    */
    // https://github.com/vuejs/vetur/issues/1195#issuecomment-481941708
    "prettier.disableLanguages": [
        "vue"
    ],
    "prettier.requireConfig": true,
    // Enable formatOnSave per-language
    "editor.formatOnSave": true,
    "[css]": {
        "editor.formatOnSave": true
    },
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[json]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[php]": {
        "editor.tabSize": 4,
    },
    "[vue]": {
        // Use eslint.autoFixOnSave instead to avoid conflicts (e.g. with `vue/html-indent`)
        "editor.formatOnSave": false
    },
    /*
    |--------------------------------------------------------------------------
    | Extension: ESLint
    |--------------------------------------------------------------------------
    */
    // This settings was required to make prettier work on vue html
    "eslint.alwaysShowStatus": true,
    "eslint.options": {
        "extensions": [
            ".html",
            ".js",
            ".json",
            ".jsx",
            ".vue",
        ]
    },
    "eslint.nodePath": "${workspaceFolderBasename}/node_modules/",
    "eslint.validate": [
        {
            "language": "html",
            "autoFix": true
        },
        {
            "language": "vue",
            "autoFix": true
        },
        {
            "language": "javascript",
            "autoFix": true
        },
        {
            "language": "javascriptreact",
            "autoFix": true
        }
    ],
    /*
    |--------------------------------------------------------------------------
    | Extension: Stylelint
    |--------------------------------------------------------------------------
    */
    "css.validate": false,
    "stylelint.enable": true,
    /*
    |--------------------------------------------------------------------------
    | Extension: Flow
    |--------------------------------------------------------------------------
    */
    "javascript.validate.enable": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "vetur.format.defaultFormatter.ts": "prettier-tslint",
    "editor.fontLigatures": true,
    "peacock.favoriteColors": [
        {
            "name": "Angular Red",
            "value": "#b52e31"
        },
        {
            "name": "Auth0 Orange",
            "value": "#eb5424"
        },
        {
            "name": "Azure Blue",
            "value": "#007fff"
        },
        {
            "name": "C# Purple",
            "value": "#68217A"
        },
        {
            "name": "Gatsby Purple",
            "value": "#639"
        },
        {
            "name": "Go Cyan",
            "value": "#5dc9e2"
        },
        {
            "name": "Java Blue-Gray",
            "value": "#557c9b"
        },
        {
            "name": "JavaScript Yellow",
            "value": "#f9e64f"
        },
        {
            "name": "Mandalorian Blue",
            "value": "#1857a4"
        },
        {
            "name": "Node Green",
            "value": "#215732"
        },
        {
            "name": "React Blue",
            "value": "#00b3e6"
        },
        {
            "name": "Something Different",
            "value": "#832561"
        },
        {
            "name": "Vue Green",
            "value": "#42b883"
        }
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "editor.copyWithSyntaxHighlighting": false,
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Lichen Contrast (rainglow)",
    "prettier.documentSelectors": [
        "*.njk"
    ],
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    // "flow.enabled": true,
    // "flow.useNPMPackagedFlow": true,
    // "flow.pathToFlow": "${workspaceFolderBasename}/node_modules/.bin/flow",
}
