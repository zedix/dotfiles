{
    /*
    |--------------------------------------------------------------------------
    | Spacing
    |--------------------------------------------------------------------------
    */
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true,
    "editor.trimAutoWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.eol": "\n",

    /*
    |--------------------------------------------------------------------------
    | Editor & Workbench
    |--------------------------------------------------------------------------
    */

    "editor.cursorSmoothCaretAnimation": true,
    "editor.fontFamily": "Operator Mono",
    "editor.fontSize": 15,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": false,
    "explorer.openEditors.visible": 0,

    "files.associations": {
        "Vagrantfile": "ruby",
        "all": "yaml",
        "development": "yaml",
        "production": "yaml",
        ".eslintrc": "jsonc",
        ".eslintrc.json": "jsonc",
        ".env": "ini",
        ".env.*": "ini"
    },

    // Ayu Mirage, Atom One Dark, One Dark Pro, Oceanic Next, Sapphire
    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "Lichen Contrast (rainglow)",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.statusBar.visible": true,

    /*
    |--------------------------------------------------------------------------
    | Extension: Prettier
    |--------------------------------------------------------------------------
    */

    "prettier.disableLanguages": [],
    "prettier.requireConfig": true,

    // Enable formatOnSave per-language
    "editor.formatOnSave": false,
    "[css]": {
        "editor.formatOnSave": true
    },
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[json]": {
        "editor.formatOnSave": true
    },
    "[vue]": {
        // Use eslint.autoFixOnSave instead to avoid conflicts
        "editor.formatOnSave": false
    },

    /*
    |--------------------------------------------------------------------------
    | Extension: Vetur
    |--------------------------------------------------------------------------
    */

    // https://code.visualstudio.com/docs/nodejs/vuejs-tutorial
    // "vetur.format.defaultFormatter.html": "prettier",

    /*
    |--------------------------------------------------------------------------
    | Extension: ESLint
    |--------------------------------------------------------------------------
    */

    "eslint.enable": true,
    // This settings was required to make prettier work on vue html
    "eslint.autoFixOnSave": true,
    "eslint.alwaysShowStatus": true,
    "eslint.options": {
        "extensions": [
            ".html",
            ".js",
            ".vue",
            ".jsx"
        ]
    },
    "eslint.nodePath": "${workspaceFolderBasename}/node_modules/",
    "eslint.validate": [
        {
            "language": "html",
            "autoFix": true
        },
        {
            "language": "vue",
            "autoFix": true
        },
        {
            "language": "javascript",
            "autoFix": true
        },
        {
            "language": "javascriptreact",
            "autoFix": true
        }
    ],

    /*
    |--------------------------------------------------------------------------
    | Extension: Stylelint
    |--------------------------------------------------------------------------
    */

    "stylelint.enable": true,
    "css.validate": false,

    /*
    |--------------------------------------------------------------------------
    | Extension: Flow
    |--------------------------------------------------------------------------
    */

    "javascript.validate.enable": false,
    "javascript.updateImportsOnFileMove.enabled": "always",

    "flow.enabled": true,
    "flow.useNPMPackagedFlow": true,
    // "flow.pathToFlow": "${workspaceFolderBasename}/node_modules/.bin/flow",
}
