[user]
    name = Louis-Xavier Vignal
    email = xxx

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = green
    changed = red
    untracked = cyan

[core]
    whitespace = space-before-tab,-indent-with-non-tab,tab-in-indent,trailing-space,cr-at-eol,tabwidth=4
    warnAmbiguousRefs = false
    editor = atom --wait
    #editor = ~/bin/subl -n -w

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    cp = cherry-pick
    df = diff
    dfc = diff --cached
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    hist = log --graph --pretty=format:'%Cred%h%Creset - %C(bold blue)<%an>%Creset%C(yellow)%d%Creset %s %Cgreen(%cr) ' --abbrev-commit --max-count 20
    hub = git
    ls = ls-files
    rb = pull --rebase
    svnid = !git --no-pager log --all --pretty=format:\"%H %s\" --grep
    rmd = !git status --porcelain | awk ' /^ D/ { print $2 }' | xargs git rm
    ff = merge --ff-only
    resolve = update-index
    cia = commit --amend
    rbc = rebase --continue
    cpc = cherry-pick --continue
    wdfc = diff -b -w --word-diff=color --cached --word-diff-regex='\\(|\\)|[^[:space:]()]+'
    files = show --pretty="format:" --name-only

[rerere]
    enabled = true

[merge]
    conflictstyle = diff3

[push]
    # See `git help config` (search for push.default)
    # for more information on different options of the below setting.
    #
    # Setting to git 2.0 default to surpress warning message
    default = simple

[filter "media"]
    clean = git-media-clean %f
    smudge = git-media-smudge %f

[filter "hawser"]
    clean = git hawser clean %f
    smudge = git hawser smudge %f
    required = true

[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true
